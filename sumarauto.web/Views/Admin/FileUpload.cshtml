@model List<Model.FileUploadModel>
@{
    ViewBag.Title = "FileUpload";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
    int count = 0;
}

<div class="container-fluid">
    <div class="card my-2">
        <div class="card-body d-flex justify-content-between align-items-center">
            <div>
                <h5 class="card-title fw-semibold mb-0 pb-0">Manage Category</h5>
            </div>
            <div class="d-flex">
                <div style="margin-right:10px;">
                    <a href="@Url.Action("FileUploadAction","Admin")" class="btn btn-primary">Add New</a>
                </div>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <table id="DTable" class="display responsive" style="width:100%">
                <thead>
                    <tr>
                        <th style="width:10%;">#</th>
                        <th>Title</th>
                        <th style="width:20%;">File</th>
                        <th style="width:20%;">Status</th>
                        <th style="width:10%;">Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count = count + 1;
                        <tr data-id="@item.Id">
                            <td style="text-align: center;" data-id="@item.Id">@count</td>
                            <td>@item.Title</td>
                            <td><a href="@item.FilePath">@item.FilePath</a></td>
                            <td>
                                <button class="statusBtn border-0 bg-transparent" data-class="@(item.Status == true ? false:true)" data-id="@item.Id">
                                    <i class=" @(item.Status == true ? "ti ti-checkbox" : "ti ti-square-rounded-letter-x text-danger")" style="font-size: x-large; color: darkseagreen;"></i>
                                </button>
                            </td>
                            <td>
                                @item.CreatedOnString
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        var table = $('#DTable').DataTable({
            responsive: true
        });
    });
    const featuredBtns = document.querySelectorAll(".featuredBtn");
    const statusBtns = document.querySelectorAll(".statusBtn");
    statusBtns.forEach(statusBtn => {
        statusBtn.addEventListener("click", function () {
            var Value = this.getAttribute("data-class");
            var id = this.getAttribute("data-id");
            $.ajax({
                type: "POST",
                url:'@Url.Action("StatusChange","Helper")',
                 data: {
                     Id: id,
                     Type: 'FileUpload'
                },
                success: function (response) {
                    if (response.Result = true) {
                        Swal.fire({
                            icon: 'success',
                            title: 'File upload status update successfully',
                        }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.href = "/admin/FileUpload";
                            }
                        });
                    }
                    else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: 'Something went wrong!',
                        })
                    }
                },
                error: function(response) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Something went wrong!',
                    })
                }
            })
        });
    });
</script>