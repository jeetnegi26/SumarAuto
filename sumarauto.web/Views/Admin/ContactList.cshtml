@model List<Model.ContactForm>

@{
    ViewBag.Title = "ContactFormList";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
    int Count = 0;
}

<div class="adminpage-head p-3">
    <div>
        <h4 class="m-0 mb-4">Contact Form List</h4>
    </div>
    <div class="card shadow mb-4">
        <div class="card-body table-responsive">
            <table class="cat-table table table-bordered" id="OrderViewTable" cellspacing="0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Details</th>
                        <th>Location</th>
                        <th>Date</th>
                        <th>Message</th>
                        <th style="background-image: none; cursor: auto; text-align:center;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            Count = Count + 1;
                            <tr>
                                <td>@Count</td>
                                <td>
                                    <h6 class="table-text">@item.Name </h6>
                                </td>
                                <td class="">
                                    <label><strong>Email :</strong> @item.Email</label>
                                    <label class=""><strong>Phone :</strong>  @item.Phone</label>
                                </td>
                                <td class="d-grid">
                                    <label><strong>Company :</strong> @item.CompanyName</label>
                                    <label class=""><strong>Country :</strong>  @item.Country</label>
                                </td>
                                <td>
                                    <h6 class="table-text"> @item.CreatedOn.ToString("MMM-d-yyyy") </h6>
                                </td>
                                <td>
                                    <p class="text-dark">
                                        @item.Comment
                                    </p>
                                </td>
                                <td style="text-align:center;">
                                    <button type="button" class="deletebtn text-danger bg-transparent border-0 p-0 m-0" data-id="@item.Id" title="Delete" style="cursor:pointer;"><i class="ti ti-trash" style="font-size:20px;"></i></button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    function shouldApplyFocus() {
        return true;
    }
    document.addEventListener("keypress", function (event) {
        var searchInput = document.querySelector('#OrderViewTable_filter input[type="search"]');
        if (shouldApplyFocus()) {
            // Set focus on the search input when the page loads
            searchInput.focus();
            // Check if the pressed key is an alphabet character
            if (/^[a-zA-Z]$/.test(event.key)) {
                // Append the pressed key to the search input value
                searchInput.value += event.key;

                // Prevent the default action of the keypress event (e.g., typing the key in other elements)
                event.preventDefault();
            }
        }
    });
    $(document).ready(function () {
        $('#OrderViewTable').DataTable({
            stateSave: true,
            "language": {
                "search": "_INPUT_",
                "searchPlaceholder": "Search..."
            }
        });
    });
   //--------------Delete-btn--------------------//
    $(".deletebtn").on('click', function () {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    type:"POST",
                    url: '@Url.Action("DeleteContactForm", "Admin")',
                    data: {
                        id : $(this).attr('data-id')
                    }
                })
                    .done(function (response) {
                        if (response == "True") {
                            Swal.fire({
                                position: 'top-end',
                                icon: 'success',
                                title: 'Contact form detail deleted Successfully',
                                showConfirmButton: false,
                                timer: 1500
                            })
                            setTimeout(function () {// wait for 5 secs(2)
                                window.location.reload(); // then reload the page.(3)
                            }, 1550);
                        }
                        else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Oops...',
                                text: 'Something went wrong!',
                            })
                        }
                })
                .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Something went wrong!',
                    })
                });
            }
        })
    });
    //------------//--Delete-btn--//------------------//
</script>