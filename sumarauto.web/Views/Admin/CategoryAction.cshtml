@using DataModel
@model Model.Category
@{
    ViewBag.Title = "CategoryAction";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<div class="product-container py-2 dow_page_con">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-12 d-flex justify-content-between align-items-baseline">
            <!-- Page header -->
            <div class="mb-4">
                <h4 class="mb-0">@(Model != null && Model.Id > 0 ? "Edit Category" : "Add - Category")</h4>
            </div>
            <div>
                <p class="m-0">
                    <a class="text-danger" href="/admin/DownloadList">Back to List</a>
                </p>
            </div>
        </div>
    </div>
    <div>
        <form id="Create">
            <input type="text" class="d-none" id="Id" value="@Model.Id" name="Id" />
            <input type="text" class="d-none" name="CreatedBy" value="@Model.CreatedBy" />
            <input type="text" class="d-none" name="CreatedOn" value="@Model.CreatedOn" />
            <input type="text" class="d-none" name="Image" value="@Model.Image" />
            <div class="row">
                <div class="col-lg-8 col-12">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div>
                                <div class="mb-3">
                                    <label class="form-label">Title</label>
                                    <input type="text" value="@Model.Title" name="Title" class="form-control" placeholder="Enter Title">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Image Upload</label>
                                    <div class="input-group">
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" name="dow_Page" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" required>
                                            <label class="custom-file-label" for="inputGroupFile04">Choose file</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Status</label>
                                    <select class="form-select" name="Status" aria-label="Default select example">
                                        @if (Model.Id > 0)
                                        {
                                            <option @(Model.Status == true ? "selected" : "") value="true">Published</option>
                                            <option @(Model.Status == false ? "selected" : "") value="false">Unpublished</option>
                                        }
                                        else
                                        {
                                            <option selected value="true">Published</option>
                                            <option value="false">Unpublished</option>
                                        }
                                    </select>
                                </div>
                                <div class="d-grid">
                                    @if (Model.Id > 0)
                                    {
                                        <button id="EditBtn" type="button" class="btn btn-primary w-100 p-2">
                                            <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                                            Save
                                        </button>
                                    }
                                    else
                                    {
                                        <button id="CreateBtn" type="button" class="btn btn-primary w-100 p-2">
                                            <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                                            Save
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>