@model DataModel.BlogsRecentAndFeatured
@{
    ViewBag.Title = "Blogs";
    ViewBag.Description = "Explore Sumar Auto Parts' blog for expert tips, car maintenance advice, industry news, and the latest trends in auto parts and accessories in Dubai.";
    ViewBag.Image = "";
}

<style>
    .blog-box {
        -webkit-box-shadow: 0px 0px 61px -50px rgba(0,0,0,0.75);
        -moz-box-shadow: 0px 0px 61px -50px rgba(0,0,0,0.75);
        box-shadow: 0px 0px 61px -50px rgba(0,0,0,0.75);
        border-radius:10px;
    }

    .blog-content {
        padding: 2rem;
        background-color: #f3f4f596;
        color: var(--text);
    }

        .blog-content h4, .blog-content p, .blog-content a{
            color: var(--text);
        }

        .blog-item {
            padding: 0 1.5rem;
        }

    .blog-date {
        color: var(--primary) !important;
    }

    .recent-art-head{
        padding: 7rem 0 2rem;
    }

    .recent-blogs{
        padding-bottom:5rem;
    }
</style>


<div class="container">
    @if (Model.Featured != null)
    {
        <div class="text-center py-4">
            <h2>FEATURED ARTICLES</h2>
        </div>
        <div class="featured-blogs">
            <div class="row">
                @foreach (var item in Model.Featured)
                {
                    <div class="col-lg-4 col-md-6 col-12">
                        <div class="item blog-item">
                            <a href="/Blog?bId=@item.Id">
                                <div class="blog-box">
                                    <img src="@item.Image" alt="Blog Image" />
                                    <div class="blog-content">
                                        <h4>@item.Title</h4>
                                        <p>
                                            @Html.Raw(item.Description)
                                        </p>
                                        <br />
                                        <p class="blog-date">@item.Date.ToString("dd MMM yyyy")</p>
                                        <a href="/Blog?bId=@item.Id">Read More</a>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>

                }
            </div>
        </div>

    }

    @if (Model.Recent != null)
    {
        <div class="text-center recent-art-head">
            <h2>RECENT ARTICLES</h2>
        </div>

        <div class="recent-blogs">
            <div class="row">
                @foreach (var recentitem in Model.Recent)
                {
                    <div class="col-lg-4 col-md-6 col-12">
                        <div class="item blog-item">
                            <div class="blog-box">
                                <img src="@recentitem.Image" alt="Blog Image" />
                                <div class="blog-content">
                                    <h4>@recentitem.Title</h4>
                                    <p>
                                        @Html.Raw(recentitem.Description)
                                    </p>
                                    <br />
                                    <p class="blog-date">@recentitem.Date.ToString("dd MMM yyyy")</p>
                                    <a href="/Blog?bId=@recentitem.Id">Read More</a>
                                </div>
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    }
</div>

