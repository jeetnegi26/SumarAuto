@model List<Model.FileUploadModel>
﻿@{
    ViewBag.Title = "Catalogues";
    ViewBag.Description = "Sumar is a professional auto parts supplier in Dubai. Base on years experiences in the Auto parts field, we know what our customers’ demand and can offer our best service.";
    ViewBag.Image = "";
}

<style>
    .search-box .bootstrap-select {
        border: 1px solid var(--bg);
        width: 100% !important;
        color: var(--bg);
    }
    .cat-cont {
        padding: 4rem 0;
        min-height: 60.5vh;
    }

    .catalogues-container {
        padding-top: 3rem;
    }

    .catalogue-card {
        border: 2px solid var(--text);
        padding: 1rem;
        border-radius: 1rem;
    }

        .catalogue-card h1 {
            font-size: 4rem;
        }

        .catalogue-card h3 {
            font-size: 1.3rem;
        }

        .catalogue-card p {
            margin-bottom: 0;
        }

        .catalogue-card button {
            font-size: 2rem;
            border: none;
            background-color: transparent;
            transition: 0.3s;
        }

            .catalogue-card button:hover {
                color: var(--primary);
            }

    .catalog-box {
        padding: 1rem;
    }

    .bi-file-earmark-pdf {
        color: var(--primary)
    }


    @@media(max-width:1024px) {
        .cat-cont {
            padding: 4rem 0;
            min-height: 76vh;
        }
