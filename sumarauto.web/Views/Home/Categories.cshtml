@model List<Model.Category>
@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .caregory {
        margin-top: 2rem;
        padding: 3rem 0;
    }

    .div-box {
        padding: 3rem 0;
    }

    .category-box {
        padding: 10rem 3rem 2rem;
        position: relative;
    }

    .category-item {
        display: flex;
        flex-direction: column;
        text-align: center;
        padding: 6.5rem 1rem 1.5rem;
        height: 100%;
        border-radius: 7px;
        transition: 0.3s;
        background: white;
        border-top: 7px solid var(--primary);
        -webkit-box-shadow: 0px 0px 19px -12px rgba(0,0,0,0.75);
        -moz-box-shadow: 0px 0px 19px -12px rgba(0,0,0,0.75);
        box-shadow: 0px 0px 19px -12px rgba(0,0,0,0.75);
    }

        .category-item:hover {
            -webkit-box-shadow: -1px 1px 20px -5px rgba(153,153,153,1);
            -moz-box-shadow: -1px 1px 20px -5px rgba(153,153,153,1);
            box-shadow: -1px 1px 20px -5px rgba(153,153,153,1);
        }

        .category-item button {
            margin: auto auto 0;
            width: fit-content;
        }

        .category-item img {
            width: 46%;
            margin: 0 auto;
            padding: 1rem;
            border: 8px solid var(--primary);
            border-radius: 50%;
            margin-bottom: 2rem;
            position: absolute;
            top: 11%;
            left: 27%;
            background-color: white;
        }

        .category-item p {
            font-size: 13px;
        }

    .category-container {
        padding-top: 5rem;
    }
</style>

<div class="caregory">
    <div class="container">
        <div class="text-center">
            <h2>OUR CATEGORIES</h2>
            <p>
                Sumar Auto uses a special formula for manufacturing rubber parts.
                We also use durable materials and employ powder coating in place
                of traditional painting for our metal parts. As a result,
                they feature high resistances to heat, rapid friction, oxidation,
                and aging.
            </p>
        </div>

        <div class="category-list">
            <div class="row">
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <div class="col-xl-4 col-lg-6 col-md-6 col-12 category-box">
                            <div class="category-item">
                                <img src="@item.Image" alt="@item.Title" />
                                <h4>@item.Title</h4>
                                <p>@Html.Raw(@item.Description)</p>
                                <button class="btn-primary">Find out more</button>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
