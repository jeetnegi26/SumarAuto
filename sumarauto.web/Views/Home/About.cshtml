@{
    ViewBag.Title = "About";
}
<style>
    .about-read {
        display:none;
    }

    .about-us {
        padding: 5rem 0px;
    }

    .gallert-gallery {
        padding: 5rem 0;
    }

        .gallert-gallery h2 {
            text-align: center;
        }

    .owl-item .item {
        transform: translate3d(0, 0, 0); /* DO NOT REMEMBER WHERE TU PUT THIS, SEARCH FOR 3D ACCELERATION */
        margin: 50px 0; /* OVERWRITE PLUGIN MARGIN */
    }

    .owl-carousel .owl-nav button.owl-next, .owl-carousel .owl-nav button.owl-prev {
        color: var(--text) !important;
    }

        .owl-carousel .owl-nav button.owl-next:focus, .owl-carousel .owl-nav button.owl-prev:focus {
            outline: none;
            border: none;
        }

    .gallert-slider .owl-item .item img {
        -webkit-transition: 0.3s;
        -webkit-box-shadow: 0 5px 10px 0 rgba(0, 0, 0, 0.1);
        box-shadow: 0 5px 10px 0 rgba(0, 0, 0, 0.1);
        -o-transition: 0.3s;
        transition: 0.3s;
        -webkit-transform: scale(0.80);
        -ms-transform: scale(0.80);
        transform: scale(0.80);
    }

    .gallert-slider .owl-item.center .item img {
        -webkit-transform: scale(1.15);
        -ms-transform: scale(1.15);
        transform: scale(1.15);
    }

    .gallert-slider .owl-nav {
        text-align: center;
    }

        .gallert-slider .owl-nav button {
            font-size: 24px !important;
            margin: 10px;
            color: #033aff !important;
        }

    .mission{
        padding:2rem 0;
    }

    .mission-container {
        padding-top:3rem;
    }

    

        .mission-container p{
            margin:0;
        }

    @@media (min-width:1025px){
        .mission-container img {
            width: 50%
        }
    }

    .client-carousal .item{
        padding:0 1.7rem;
    }
</style>


