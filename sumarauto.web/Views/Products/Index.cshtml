                            <option value="Air hose"> G24W7</option>
                        </select>
                    </div>

                    <div class="col-lg-1 col-md-1 col-12 search-box">
                        <h6 class="date">Liters</h6>
                        <select name="Liters" id="Liters" class="selectpicker">
                            <option value="Air hose">  2.4L</option>
                            <option value="Air hose">  3.4L</option>
                            <option value="Air hose">  1.4L</option>
                            <option value="Air hose">  2.5L</option>
                            <option value="Air hose">  3.4L</option>
                        </select>
                    </div>


                    <div class="col-lg-1 col-md-1 col-12 search-box">
                        <h6 class="date">Chassis</h6>
                        <select name="Chassis" id="Chassis" @*class="selectpicker"*@>
                            <option value="Air hose"> DE2F</option>
                            <option value="Air hose"> 4D2F</option>
                            <option value="Air hose"> PE2F</option>
                            <option value="Air hose"> DL2F</option>
                            <option value="Air hose"> DE4O</option>
                        </select>
                    </div>

                    <div class="col-lg-2 col-md-2 col-12 search-box">
                        <h6 class="date">Search</h6>
                        <input class="search-text" type="text" class="form-control" id="">
                    </div>

                    <div class="col-lg-1 col-md-1 col-12 boo-btn search-box">
                        <button class="book_btn" type="button"><i class="bi bi-search"></i></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


